<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bitc.mapper.BoardMapper">
	<!-- 게시판 조회-->
	<select id = "selectBoardList" resultType="com.bitc.dto.BoardDto"> 
		<![CDATA[
			select 
				idx, 
				user_id,
				contents, 
				title, 
				created_date
			from 
				board
			where 
				deleted_yn = 'N'
		]]>
	</select>
	
	<!-- 게시판 검색-->
	<select id = "searchBoardList" parameterType="String" resultType="com.bitc.dto.BoardDto">
		<![CDATA[
			select 
				idx, 
				user_id, 
				title, 
				created_date
			from 
				board
			where 
				deleted_yn = 'N'
			and 
				user_id = #{userId}
		]]>	
	</select  >
	<!-- 게시판 상세 보기-->
	<select id="boardDetail" parameterType="int" resultType="com.bitc.dto.BoardDto">
		<![CDATA[ 
			select 
				idx, 
				user_id, 
				title, 
				contents, 
				created_date
			from 
				board
			where 
				idx = #{idx};
		]]>
	</select>	
</mapper>

